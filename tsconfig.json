{
	"compilerOptions": {
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"exactOptionalPropertyTypes": false,
		"noImplicitOverride": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "dist",
		"incremental": true,
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"importHelpers": false,
		"lib": [
			"esnext"
		],
		"module": "Node16",
		"moduleResolution": "Node16",
		"newLine": "lf",
		"noEmitHelpers": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"pretty": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
		"useDefineForClassFields": true,
		"paths": {
			"@src/*": [
				"./src/*"
			],
			"@database/*": [
				"./src/system/backend/database/*"
			],
			"@builders/*": [
				"./src/system/backend/builders/*"
			],
			"@dbmodels/*": [
				"./src/system/backend/database/models/*"
			],
			"@classes/*": [
				"./src/system/backend/classes/*"
			],
			"@initializers/*": [
				"./src/system/backend/initializers/*"
			],
		},
	},
	"include": [
		"src"
	]
}