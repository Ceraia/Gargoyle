{
    "name": "gargoyle",
    "main": "src/index.ts",
    "type": "module",
    "dependencies": {
        "colorette": "^2.0.20",
        "discord.js": "^14.17.3",
        "figlet": "^1.8.0",
        "fs": "^0.0.2",
        "gradient-string": "^3.0.0",
        "http": "^0.0.1-security",
        "mongoose": "^8.9.5",
        "ollama": "^0.5.12",
        "path": "^0.12.7",
        "tsconfig-paths": "^4.2.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.19.0",
        "@types/figlet": "^1.7.0",
        "@types/node": "^22.10.10",
        "@types/ws": "^8.5.14",
        "eslint": "^9.19.0",
        "globals": "^15.14.0",
        "lint": "^0.8.19",
        "npm-run-all2": "^7.0.2",
        "prettier": "^3.4.2",
        "tsc-watch": "^6.2.1",
        "typescript": "~5.7.3",
        "typescript-eslint": "^8.21.0"
    },
    "scripts": {
        "start": "bun run .",
        "dev": "bun run --watch .",
        "docker-start": "docker compose -f ./docker-compose-dev.yml up -d --remove-orphans",
        "docker-stop": "docker compose -f ./docker-compose-dev.yml down --remove-orphans",
        "db-on": "docker compose -f ./docker-compose-db.yml up -d --remove-orphans",
        "db-off": "docker compose -f ./docker-compose-db.yml down --remove-orphans",
        "build": "tsc",
        "format": "prettier --write \"src/**\"",
        "lint": "eslint src/** ",
        "lint:fix": "eslint --fix src/** ",
        "check": "bun run format && bun run lint:fix && bun run build"
    },
    "prettier": {
        "endOfLine": "lf",
        "printWidth": 150,
        "bracketSpacing": true,
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "useTabs": false,
        "overrides": [
            {
                "files": "*.yml",
                "options": {
                    "tabWidth": 2,
                    "useTabs": false
                }
            }
        ]
    }
}