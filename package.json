{
	"name": "gargoyle",
	"main": "src/index.ts",
	"type": "module",
	"dependencies": {
		"colorette": "^2.0.20",
		"discord.js": "^14.14.1",
		"figlet": "^1.7.0",
		"fs": "^0.0.1-security",
		"gradient-string": "^3.0.0",
		"http": "^0.0.1-security",
		"mongoose": "^8.7.0",
		"path": "^0.12.7",
		"tsconfig-paths": "^4.2.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.12.0",
		"@types/figlet": "^1.7.0",
		"@types/node": "^22.7.5",
		"@types/ws": "^8.5.10",
		"eslint": "^9.12.0",
		"globals": "^15.11.0",
		"lint": "^0.8.19",
		"npm-run-all2": "^6.1.1",
		"prettier": "^3.2.4",
		"tsc-watch": "^6.0.4",
		"typescript": "~5.6.2",
		"typescript-eslint": "^8.8.1"
	},
	"scripts": {
		"start": "bun run .",
		"dev": "bun run --watch .",
		"build": "tsc",
		"format": "prettier --write \"src/**\"",
		"lint": "eslint src/** ",
		"lint:fix": "eslint --fix src/** ",
		"pre": "bun run lint && bun run format && bun run build"
	},
	"prettier": {
		"endOfLine": "lf",
		"printWidth": 150,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"semi": true,
		"singleQuote": true,
		"useTabs": true,
		"overrides": [
			{
				"files": "*.yml",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}