{
    "name": "gargoyle",
    "main": "src/index.ts",
    "type": "module",
    "dependencies": {
        "@discordjs/voice": "^0.18.0",
        "colorette": "^2.0.20",
        "discord.js": "^14.21.0",
        "figlet": "^1.8.2",
        "fs": "^0.0.2",
        "gradient-string": "^3.0.0",
        "libsodium-wrappers": "^0.7.15",
        "mongoose": "^8.16.3",
        "opusscript": "^0.1.1",
        "path": "^0.12.7",
        "sodium": "^3.0.2",
        "steamapi": "^3.1.3",
        "tsconfig-paths": "^4.2.0",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.31.0",
        "@types/bun": "^1.2.18",
        "@types/figlet": "^1.7.0",
        "@types/node": "^22.16.4",
        "@types/ws": "^8.18.1",
        "eslint": "^9.31.0",
        "globals": "^16.3.0",
        "prettier": "^3.6.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.37.0"
    },
    "scripts": {
        "start": "bun run .",
        "dev": "bun run --watch .",
        "dev:on": "bun run aux:on && bun run app:on",
        "dev:off": "bun run aux:off && bun run app:off",
        "aux:on": "docker compose -f ./docker-compose-dev.yml --profile aux up -d --remove-orphans ",
        "aux:off": "docker compose -f ./docker-compose-dev.yml --profile aux down --remove-orphans",
        "app:on": "docker compose -f ./docker-compose-dev.yml --profile app up --remove-orphans ",
        "app:off": "docker compose -f ./docker-compose-dev.yml --profile app down --remove-orphans",
        "build": "tsc",
        "format": "prettier --write \"src/**\"",
        "check": "bun run format && bun run build"
    },
    "prettier": {
        "endOfLine": "lf",
        "printWidth": 150,
        "bracketSpacing": true,
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "useTabs": false,
        "overrides": [
            {
                "files": "*.yml",
                "options": {
                    "tabWidth": 2,
                    "useTabs": false
                }
            }
        ]
    }
}
